<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - E-Shop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script> <!-- Icons -->

</head>
<body>
    <!-- Navbar -->
   <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
    <div class="container">
        <a class="navbar-brand fw-bold fs-3 text-primary" href="/">ZIZEE</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainNavbar">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item"><a class="nav-link" href="#">Store</a></li>
                <li class="nav-item"><a class="nav-link" href="#">iPhone</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Watch</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Laptop</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Accessories</a></li>
            </ul>

            <form class="d-flex me-3" role="search">
                <input class="form-control me-2" type="search" placeholder="Tìm kiếm...">
                <button class="btn btn-outline-primary" type="submit">Tìm</button>
            </form>

            <div class="d-flex align-items-center">
                <a href="/Account/Login" class="text-dark me-3" title="Đăng nhập">
                    <i class="fas fa-user fa-lg"></i>
                </a>
                <a href="/Cart" class="text-dark" title="Giỏ hàng">
                    <i class="fas fa-shopping-cart fa-lg"></i>
                </a>
            </div>
        </div>
    </div>
</nav>


    <!-- Main content -->
    <main role="main" class="container-fluid p-0">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <p class="mb-0">© 2025 E-Shop. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
